{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "jest", "node"],
    "plugins": [
      { "name": "@vuedx/typescript-plugin-vue" },
      { "name": "ts-vue-plugin" },
    ],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "/@r/*": ["./*"]
    },
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"]
}
